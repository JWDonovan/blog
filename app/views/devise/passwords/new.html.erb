<div class="hero is-fullheight is-primary">
  <div class="hero-body">
    <div class="container is-max-desktop" style="max-width: 500px">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "card py-6 px-6 mb-4" }) do |f| %>
        <h1 class="title has-text-dark mb-6">Reset Password</h1>

        <%= render "devise/shared/error_messages", resource: resource %>
        
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input mb-4", placeholder: "email" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "input mb-6", placeholder: "password" %>

        <button class="button is-success mr-2" type="submit">
          <span>Send Link</span>
          <span class="icon">
            <%= fa_icon "link" %>
          </span>
        </button>

        <%- if controller_name != 'sessions' %>
          <%= link_to new_session_path(resource_name), class: "button is-light is-link" do %>
            <span>Log in</span>
            <span class="icon">
              <%= fa_icon "sign-in" %>
            </span>
          <% end %>
        <% end %>

        <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
          <%= link_to new_registration_path(resource_name), class: "button is-light is-primary" do %>
            <span>Sign up</span>
            <span class="icon">
              <%= fa_icon "user-plus" %>
            </span>
          <% end %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>