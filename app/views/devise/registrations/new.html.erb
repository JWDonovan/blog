<div class="hero is-fullheight is-primary">
  <div class="hero-body">
    <div class="container is-max-desktop" style="max-width: 500px">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:class => "card py-6 px-6 mb-4"}) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <h1 class="title has-text-dark mb-6">Sign up</h1>

        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input mb-4", placeholder: "email" %>
        <%= f.password_field :password, autocomplete: "new-password", class: "input mb-4", placeholder: "password" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input mb-6", placeholder: "password confirmation" %>
    
        <button class="button is-success mr-2" type="submit">
          <span>Sign up</span>
          <span class="icon">
            <%= fa_icon "user-plus" %>
          </span>
        </button>

        <%- if controller_name != 'sessions' %>
          <%= link_to new_session_path(resource_name), class: "button is-light" do %>
            <span>Log in</span>
            <span class="icon">
              <%= fa_icon "sign-in" %>
            </span>
          <% end %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>